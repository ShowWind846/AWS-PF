<main>
  <div class="profile">
    <div class="profile-header">
      <div class="name-and-image">
        <%= attachment_image_tag @corp, :profile_image, size: "100x100", format: 'png', fallback: "no_image.png", size: "100x100", class: "prof-image" %>
        <p><%= @corp.last_name + " " + @corp.first_name %> </p>
        <div class="setting-link">
          <% if @corp.id == current_corp.id %>
            <%= link_to edit_corp_registration_path do %><i class="fas fa-cog"></i><% end %>
          <% end %>
        </div>
      </div>
      <div class="comment">
        <div class="balloon">
          <p>　<%= @corp.introduction %>　</p>
        </div>
      </div>
      <!--所属医療機関名と所在地-->
        <div class="row">
          <div class="col-6">
            <%= link_to root_path, class: "btn btn-outline-success disabled rounded-pill w-100" do %><%= @corp.hospital %><% end %>
          </div>
          <div class="col-6">
            <%= link_to root_path, class: "btn disabled btn-outline-danger rounded-pill w-100" do %><%= @corp.area %><% end %>
          </div>
        </div>
      <div class="first-day">
    </div>
    <br class="br-sp">
    <br>
      <i class="far fa-calendar-alt"> <%= l @corp.created_at, format: :first %> からSUGGESTooLを利用しています</i>
    </div>
  </div>
</main>