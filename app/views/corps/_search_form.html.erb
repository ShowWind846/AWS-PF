
<%= form_with url: corp_search_path, method: :get, local: true do |f| %>
  <div class="container mb-3">
    <div class="row">
      <%= f.select :search, options_for_select(User.areas), {}, class: "form-control col-8" %><br class="br-sp">
      <%= f.submit "検索", class: "btn btn-outline-info col-2" %>
      <%= link_to "リセット", corp_search_path, class: "btn btn-outline-danger col-2 d-flex justify-content-center align-items-center" %>
    </div>
  </div>
<% end %>