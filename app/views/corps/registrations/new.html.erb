<main>
    <div class="corp-registration-page">
    <div class="menu-head">
      <%= image_tag 'menu_head2.gif', class: 'menu-head-img' %>
      <p>　新規登録 ( Corps )</p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "corps/shared/error_messages", resource: resource %>
      <div class="container">
        <div class="field">
            <%= f.label :name, "医師名（もしくは医療機関名）" %>
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "例）Suggestool.Inc" %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "ＰＣ・携帯どちらでも可" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上の半角英数字" %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "確認のため再度入力"  %>
        </div>
        <div class="actions">
          <div class="row">
            <%= f.submit "新規登録",class: "btn btn-lg btn-outline-success w-100" %>
          </div>
        </div>
      <% end %>
      <br>
      <%= render "corps/shared/links" %>
    </div>
  </div>
</main>