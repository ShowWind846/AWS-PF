<main>
  <div class="follow-page">
    <span class="corp-page-title">　フォローしているセールス一覧　</span>
    <table class="table table-hover follow-table">
      <thead bgcolor="#EEE">
        <th>名前</th>
        <th width="200px">会社名</th>
        <th width="110px"><p class="display-none">担当エリア</p></th>
        <th width="180px"><p class="display-none">メッセージ</p></th>
        <th width="120px"></th>
      </thead>
      <tbody>
        <% @relationships.each do |relationship| %>
        <% @user = User.find(relationship.user_id) %>
        <% @room = Room.find_by(relationship_id: relationship.id) %>
        <tr>
          <td class="align-middle sales-index-name">
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'png', fallback: "no_image.png", size: "40x40", class: "profile-image" %>
              <%= @user.last_name + " " + @user.first_name %>
            <% end %>
          </td>
          <td class="align-middle"><%= @user.company %></td>
          <td class="align-middle" class="sales-area"><%= @user.area %></td>
          <td><%= link_to " メッセージを送る ", room_path(@room.id), class: "btn btn-outline-primary" %> </td>
          <td>
            <div id="follow_button">
              <%= render partial: 'relationships/follow', locals: {user: @user} %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</main>