<main>
  <div class="profile">
    <div class="name-and-image">
      <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'png', fallback: "no_image.png", size: "100x100", class: "prof-image" %>
      <p><%= @user.last_name + " " + @user.first_name %>（ <%= @user.company %> ）</p>
    </div>
    <div class="comment">
      <div class="balloon">
        <p>　<%= @user.introduction %>　</p>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= render 'relationships/follow', user: @user %>
      </div>
      <div class="col-6">
        <%= link_to "　前の画面に戻る　", :back, class: "btn btn-outline-primary rounded-pill w-100" %>
      </div>
    </div>
    <div class="first-day">
      <br>
      <i class="far fa-calendar-alt"> <%= l @user.created_at, format: :first %> からSUGGESTooLを利用しています</i>
    </div>
    <div class="myposts">
      <%= render partial: "posts", locals: { posts: @posts } %>
    </div>
  </div>
</main>