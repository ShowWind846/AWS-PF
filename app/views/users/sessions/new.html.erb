<main>
  <div class="session-page">
    <div class="session-title mb-4">
      <span class="align-middle">　<i class="fas fa-user-tie">　</i>ログイン（セールス）</span>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
      <div class="row field mb-3">
        <div class="col-12">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="row field mb-3">
        <div class="col-12">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="field row">
        <%= f.submit "ログイン",class: "btn btn-outline-info w-100" %>
      </div><br>
      <div class="row">
        <div class="col-12">
          <%= render "users/shared/links" %>
          <%= link_to "医師の方はこちらからログインしてください", new_corp_session_path %>
        </div>
      </div>
    </div>
    <% end %>

</main>