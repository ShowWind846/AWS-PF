<main>
  <div class="follower-list">
    <div class="menu-head">
      <%= image_tag 'menu_head.gif', class: 'menu-head-img' %>
      <p>　<%= @user.last_name + " " + @user.first_name %> さんをフォローしているドクター　</p>
    </div>
    <table class="follower-table table table-hover table-sm">
      <tbody>
        <% @relationships.each do |relationship| %>
        <% @corp = Corp.find(relationship.corp_id) %>
        <% @room = Room.find_by(relationship_id: relationship.id) %>
        <tr>
          <td width="60px text-center">
            <%= link_to corp_path(@corp.id) do %>
            <%= attachment_image_tag @corp, :profile_image, size: "40x40", format: 'png', fallback: "no_image.png", size: "40x40", class: "prof-image" %>
            <% end %>
          </td>
          <td class="align-middle">
            <%= link_to corp_path(@corp.id) do %><%= @corp.last_name + " " + @corp.first_name %><% end %>
          </td>
          <td class="align-middle">
            <%= link_to room_path(@room.id) do %> メッセージのやりとりをおこなう。 <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>