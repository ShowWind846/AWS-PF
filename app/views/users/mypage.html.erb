<main>
  <div class="profile">
    <div class="name-and-image">
      <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'png', fallback: "no_image.png", size: "100x100", class: "prof-image" %>
      <p><%= @user.last_name + " " + @user.first_name %>（ <%= @user.company %> ）</p>
      <div class="setting-link">
          <%= link_to edit_user_registration_path do %><i class="fas fa-cog"></i><% end %>
      </div>
    </div>
    <div class="comment">
      <div class="balloon">
        <p>　<%= @user.introduction %>　</p>
      </div>
    </div>
    <%= link_to "　メッセージを送信する　", root_path, class: "btn btn-outline-success rounded-pill" %>
    <div class="first-day">
      <br>
      <i class="far fa-calendar-alt"> <%= l @user.created_at, format: :first %> からSUGGESTooLを利用しています</i>
    </div>
  </div>
</main>