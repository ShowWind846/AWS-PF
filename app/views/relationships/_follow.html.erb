
<% if Relationship.exists?(corp_id: current_corp.id, user_id: user.id) == true %>
  <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-danger w-100 rounded-pill", remote: true, data: {confirm: "フォロー解除してよろしいですか？"} %>
<% else %>
